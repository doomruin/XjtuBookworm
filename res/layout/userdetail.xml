<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_selfinfo"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F3F1DA"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/titlebar_big" >

        <Button
            android:id="@+id/userdetail_goMap"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_left" 
            android:text="返回"/>

        <TextView
            android:id="@+id/userdetail_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="用户详细信息"
            android:textColor="@android:color/white" />
    </FrameLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="115dp"
                android:background="@drawable/search_btn_result_bg"
                android:orientation="horizontal" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/userdetail_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="10dp"
                        android:clickable="true"
                        android:background="@drawable/person_photo_bg"
                        android:src="@drawable/head1" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textview_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:text="姓名："
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:clickable="true" />

                    <TextView
                        android:id="@+id/textview_usernum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:text="学工号："
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textview_userdegree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:text="等级："
                        android:textColor="#000"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/share_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="right"
                        
                        android:src="@drawable/share1" />
                    <TextView
                        android:layout_width="wrap_content"
                    	android:layout_height="fill_parent"
                    	android:textColor="#ff69b4"
                    	android:layout_gravity="center"
                    	android:text="分享">
                        
                    </TextView>
                </LinearLayout>
            </LinearLayout>

           
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/skin_searchbar_input"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/userdetail_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="我的收藏"
                    android:textColor="#000"
                    android:textSize="15sp" />
             
                 <ImageView
	                android:layout_width="fill_parent"
	                android:layout_height="20dp"
	                android:src="@drawable/app_divider_h_gray" >
            	</ImageView>

                <RelativeLayout
                    android:id="@+id/layout_myreadhistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:clickable="true"
                   
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我看过的书"
                        android:textSize="20sp"
                        android:textColor="#000" />
 				 <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="right"
	               android:layout_alignParentRight="true"
	               android:layout_marginRight="15dp"
	                android:src="@drawable/right" >
                  </ImageView>
                </RelativeLayout>
                  <ImageView
	                android:layout_width="fill_parent"
	                android:layout_height="20dp"
	                android:src="@drawable/app_divider_h_gray" >
            	</ImageView>
                

                <RelativeLayout
                    android:id="@+id/layout_booksiwant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  	android:layout_marginLeft="10dp"
                  	android:clickable="true"
                    android:orientation="horizontal" >

                   <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我想看的书"
                        android:textSize="20sp"
                        android:textColor="#000" />
 	<ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="right"
	                android:layout_alignParentRight="true"
	               android:layout_marginRight="15dp"
	                android:src="@drawable/right" >
                   </ImageView>
                </RelativeLayout>
                
                 <ImageView
	                android:layout_width="fill_parent"
	                android:layout_height="20dp"
	                android:src="@drawable/app_divider_h_gray" >
            	</ImageView>

                <RelativeLayout
                    android:id="@+id/layout_booksyoumaylike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  	android:layout_marginLeft="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="猜你可能喜欢"
                        android:textSize="20sp"
                        android:textColor="#000" />
 			<ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="right"
	                android:layout_alignParentRight="true"
	               android:layout_marginRight="15dp"
	                android:src="@drawable/right" >
                   </ImageView>
                </RelativeLayout>
                
                

               

               


               
            </LinearLayout>
            
            
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/skin_searchbar_input"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/userdetail_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="关于我"
                    android:textColor="#000"
                    android:textSize="15sp" />
             
                 <ImageView
	                android:layout_width="fill_parent"
	                android:layout_height="20dp"
	                android:src="@drawable/app_divider_h_gray" >
            	</ImageView>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                   
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的标签"
                        android:textSize="20sp"
                        android:textColor="#000" />
                    <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="right"
	                android:layout_alignParentRight="true"
	               android:layout_marginRight="15dp"
	                android:src="@drawable/right" >

                  </ImageView>
                </RelativeLayout>
                  <ImageView
	                android:layout_width="fill_parent"
	                android:layout_height="20dp"
	                android:src="@drawable/app_divider_h_gray" >
            	</ImageView>
                

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  	android:layout_marginLeft="10dp"
                    android:orientation="horizontal" >

                   <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的联系方式"
                        android:textSize="20sp"
                        android:textColor="#000" />
                   <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="right"
	                android:layout_alignParentRight="true"
	               android:layout_marginRight="15dp"
	                android:src="@drawable/right" >

                   </ImageView>
                </RelativeLayout>
                
                 <ImageView
	                android:layout_width="fill_parent"
	                android:layout_height="20dp"
	                android:src="@drawable/app_divider_h_gray" >
            	</ImageView>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                  	android:layout_marginLeft="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="猜你可能喜欢的人"
                        android:textSize="20sp"
                        android:textColor="#000" />
                    <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="right"
	                android:layout_alignParentRight="true"
	               android:layout_marginRight="15dp"
	                android:src="@drawable/right" >
                    
                    </ImageView>
                   
                </RelativeLayout>
                

               
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>