<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="130dp"
    android:paddingBottom="10dp"
    android:background="@color/white"
    android:orientation="vertical" >

  

        <ImageView
            android:id="@+id/imageView_recommendBookSurface"
            android:layout_width="85dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentLeft="true"
           android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/cover_txt" />
        
        <RelativeLayout 
             android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_toRightOf="@+id/imageView_recommendBookSurface"
            android:orientation="vertical"
            >

        <TextView
            android:id="@+id/textView_recommendBookName"
            android:gravity="left"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxWidth="150dp"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/textView_recommendBookAuthor"
            android:layout_below="@+id/textView_recommendBookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text=""
            />
        
        <RatingBar
            android:id="@+id/ratingBar_recommend"
             style="?android:attr/ratingBarStyleSmall"
             android:layout_alignParentBottom="true"
             
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        

        <TextView
            android:id="@+id/textView_recommendBookLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView_recommendBookISBN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>
